@model InserirSalaViewModel

@{
    ViewBag.Title = "Inserir Nova Sala";
}

<div class="col">
    <div class="row gap-3 my-3 my-xl-5">
        <form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Inserir">
            <div>
                <label class="control-label fw-semibold mb-1">Número</label>
                <input class="form-control mb-1" type="number" min="1" value="1" asp-for="Numero"/>
                <span class="text-danger fs-6" asp-validation-for="Numero"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Capacidade</label>
                <input class="form-control mb-1" min="1" value="1" asp-for="Capacidade"/>
                <span class="text-danger fs-6" asp-validation-for="Capacidade"></span>
            </div>

            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-outline-primary px-5" href="/sala/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>