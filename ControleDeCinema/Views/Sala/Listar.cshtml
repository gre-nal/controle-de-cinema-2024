@model IEnumerable<ListarSalaViewModel>

@{
    ViewBag.Title = "Listagem de Salas";
    MensagemViewModel ? mensagem = ViewBag.Mensagem ?? null;
}

<div class="col">
    <partial name="_Mensagem" model="mensagem"></partial>

    <a class="btn btn-primary px-4 mt-3" href="/sala/inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Nova Sala
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (ListarSalaViewModel salaVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@salaVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a
                            title="Detalhes"
                            class="text-info-emphasis fs-5"
                            href="/sala/detalhes/@salaVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a
                            title="Editar"
                            class="text-info-emphasis fs-5"
                            href="/sala/editar/@salaVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a
                            title="Excluir"
                            class="text-info-emphasis fs-5" href="/sala/excluir/@salaVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body d-grid ga-2">
                    <h5 class="card-title">Número da Sala: @salaVm.Numero</h5>
                    <label>Capacidade: @salaVm.Capacidade</label>
                </div>
            </div>
        }
    </div>
</div>