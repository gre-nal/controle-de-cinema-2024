@model InserirFilmeViewModel

@{
    ViewBag.Title = "Inserir Novo Filme";
}

<div class="col">
    <div class="row gap-3 my-3 my-xl-5">
        <form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Inserir">
            <div>
                <label class="control-label fw-semibold mb-1">Título</label>
                <input class="form-control mb-1" asp-for="Titulo"/>
                <span class="text-danger fs-6" asp-validation-for="Titulo"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Duração (minutos)</label>
                <input class="form-control mb-1" type="number" min="1" value="1" asp-for="Duracao"/>
                <span class="text-danger fs-6" asp-validation-for="Duracao"></span>
            </div>

            <div>
                <label class="control-label fw-semibold mb-1">Gênero do Filme</label>
                <select class="form-select" asp-for="GeneroId" asp-items="Model.Generos">
                    <option></option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="GeneroId"></span>
            </div>

            <div class="form-check">
                <input class="form-check-input mb-1" type="checkbox" asp-for="Lancamento"/>
                <label class="form-check-label fw-semibold mb-1">É Lançamento?</label>
                <span class="text-danger fs-6" asp-validation-for="Lancamento"></span>
            </div>

            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-outline-primary px-5" href="/filme/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>