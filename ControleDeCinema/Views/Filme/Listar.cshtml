@model IEnumerable<ListarFilmeViewModel>

@{
    ViewBag.Title = "Listagem de Filmes";
    MensagemViewModel ? mensagem = ViewBag.Mensagem ?? null;
}

<div class="col">
    @if (mensagem is not null)
    {
        <partial name="_Mensagem" model="mensagem"></partial>
    }
    <a class="btn btn-primary px-4 mt-3" href="/filme/inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Filme
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (ListarFilmeViewModel filmeVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="p-0">@filmeVm.Id</h5>

                    <div class="text-end d-flex align-items-center gap-3">
                        <a
                            title="Detalhes"
                            class="text-info-emphasis fs-5"
                            href="/filme/detalhes/@filmeVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a
                            title="Editar"
                            class="text-info-emphasis fs-5"
                            href="/filme/editar/@filmeVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a
                            title="Excluir"
                            class="text-info-emphasis fs-5" href="/filme/excluir/@filmeVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body d-grid gap-2">
                    <h5 class="card-title">@filmeVm.Titulo</h5>
                    <label>@filmeVm.Lancamento</label>
                    <label>Duração: @filmeVm.Duracao</label>
                    <span class="rounded-2 text-bg-primary text-center px-3 py-1">
                        <small>@filmeVm.Genero</small>
                    </span>
                </div>
            </div>
        }
    </div>
</div>