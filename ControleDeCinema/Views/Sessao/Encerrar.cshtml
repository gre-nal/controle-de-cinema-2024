@model DetalhesSessaoViewModel

@{
    ViewBag.Title = "Encerrar Sessão";
}

<div class="col">
    <partial name="_Informacoes" model="Model"></partial>

    <form class="d-grid gap-2 d-md-block mt-5" asp-action="Encerrar">
        <button class="btn btn-danger px-5">
            <i class="bi bi-journal-x me-1"></i>
            Encerrar
        </button>

        <a class="btn btn-outline-primary px-5" href="/sessao/listar">
            <i class="bi bi-arrow-return-left me-1"></i>
            Voltar
        </a>
    </form>
</div>